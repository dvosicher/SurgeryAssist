<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Pulls all property files in /META-INF/spring -->
	<context:property-placeholder location="classpath*:META-INF/config/*.properties"/>
	
	<!-- Sets @Configurable support -->
	<context:spring-configured/>
	
	<!-- Scans for application @Components to deploy -->
	<context:component-scan base-package="com.surgeryassist" />
	
	<!-- Imports the configurations of the different infrastructure systems 
		of the application -->
	<import resource="webmvc-config.xml" />
	<import resource="webflow-config.xml" />
	<import resource="data-access-config.xml" />
	<import resource="security-config.xml" />
	
</beans>